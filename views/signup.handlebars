<section class="section form">
  <div class="container">
    <h2 id="signup-text" class="is-centered">Please enter your information to
      sign up:</h2>
    <form class="form signup-form">
      <div class="form-group field columns is-centered">
        <p class="control has-icons-left has-icons-right column is-half">
          <input
            class="input"
            id="name-signup"
            type="text"
            placeholder="Username"
          />
          <span class="icon is-small is-left">
            <i class="fas fa-user"></i>
          </span>
          <span class="icon is-small is-right">
            <i class="fas fa-check"></i>
          </span>
        </p>
      </div>
      <div class="form-group field columns is-centered">
        <p class="control has-icons-left has-icons-right column is-half">
          <input
            class="input"
            id="email-signup"
            type="email"
            placeholder="Email"
          />
          <span class="icon is-small is-left">
            <i class="fas fa-envelope"></i>
          </span>
          <span class="icon is-small is-right">
            <i class="fas fa-check"></i>
          </span>
        </p>
      </div>
      <div class="form-group field columns is-centered">
        <p class="control has-icons-left column is-half">
          <input
            class="input"
            id="password-signup"
            type="password"
            placeholder="Password"
          />
          <span class="icon is-small is-left">
            <i class="fas fa-lock"></i>
          </span>
        </p>
        <label for="password-signup"></label>
      </div>
      <div class="form-group field columns is-centered">
        <button
          class="button has-background-dark sign-up has-text-white"
          type="submit"
        >signup</button>
      </div>
    </form>
  </div>
</section>
<script src="./js/signup.js"></script>